@model IEnumerable<Capa_Entidad.GeneracionSecuencia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado De Identificadores Secuenciales</h2>
@section Styles{
    <link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<p>
    <a href="@Url.Action("Create", "Secuencia")" class="btn btn-primary"> <i class="glyphicon glyphicon-plus"></i> Generar Secuencia</a>
</p>
<table class="table table-striped table-bordered table-hover"  id="myTable">
    <thead>
        <tr>
            <th>
                <label>Identificador Secuencia</label>
            </th>
            <th>
                <label>Identificador Empleado</label>
            </th>
            <th>
                <label>Siglas-DPTO Origen</label>
            </th>
            <th>
                <label>Siglas-DPTO Destino</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secuencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Incio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Fin)
            </th>
            <th>
                Funciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Secuencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpleadoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SiglasDpto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Secuencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Incio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Fin)
                </td>
                <td>
                    <a class="btn btn-info btn-xs" title="Detalles" href="@Url.Action("Details", "Secuencia", new { id = item.Id_Secuencia})"> <i class="glyphicon glyphicon-pencil"></i></a>
                    <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar", "Secuencia", new { id = item.Id_Secuencia})"> <i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>


@section scripts{
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $('#myTable').DataTable();
    </script>
}

