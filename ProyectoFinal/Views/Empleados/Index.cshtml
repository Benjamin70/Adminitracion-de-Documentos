@model IEnumerable<Capa_Entidad.Empleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listados De Empleados</h2>
@section Styles{
    <link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Empleados")"><i class="glyphicon glyphicon-plus"></i> Agregar Empleado</a>
</p>
<table class="table table-striped table-bordered table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                <label>Idenficador Empleado</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                <label>Identificador Departamento</label>
            </th>
            <th>
                <label>Funciones</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Emp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoID)
                </td>
                <td>
                    <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("Editar", "Empleados", new { id = item.Id_Emp})"> <i class="glyphicon glyphicon-edit"></i></a>
                    <a class="btn btn-info btn-xs" title="Detalles" href="@Url.Action("Details", "Empleados", new { id = item.Id_Emp})"> <i class="glyphicon glyphicon-pencil"></i></a>
                    <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar", "Empleados", new { id = item.Id_Emp})"> <i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $('#myTable').DataTable();
    </script>
}