@model Capa_Entidad.Acceso

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <img src="~/Imagenes/Login 2.png" class="img-circle" width="250" height="250" />
                <h4>Sign In</h4>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-5" })
            <div>
                @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuario" } })
                @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Passworld, htmlAttributes: new { @class = "control-label col-md-5" })
            <div>
                @Html.EditorFor(model => model.Passworld, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña" } })
                @Html.ValidationMessageFor(model => model.Passworld, "", new { @class = "text-danger" })
                <br />
                <center> <label class="field-validation-error">@Html.DisplayFor(model => model.Mensaje)</label></center>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a href="/Login/Index" class="btn btn-primary">Registrarse</a>
            </div>
        </div>
    </div>
}
